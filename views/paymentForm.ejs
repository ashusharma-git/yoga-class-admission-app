<%- include("top") -%>

<section class="main">
  <div class="container body-container">
    <div class="row mx-auto button-area">
      <div
        style="
          width: 100%;
          text-align: center;
          font-weight: 500;
          font-size: 19px;
        "
      >
        <p>Fee Payment Gateway</p>
        <hr />
      </div>
      <form action="/find-application" method="POST">
        <div class="form-group row">
          <label for="mobile" class="col-sm-2 col-form-label">Mobile</label>
          <div class="col-sm-10">
            <input
              type="number"
              class="form-control border-success"
              id="mobile"
              name="mobile"
              placeholder="Mobile"
              minlength="10"
              maxlength="10"
              required
            />
          </div>
        </div>
        <div class="form-group row">
          <label for="email" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <input
              type="email"
              class="form-control border-success"
              id="email"
              name="email"
              placeholder="Email"
              required
            />
          </div>
        </div>
        <input
              type="text"
              class="form-control border-success d-none"
              id="action"
              name="action"
              value="PAYMENT"
              placeholder="Email"
              required
            />
        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-success">
              Find my registration
            </button>
          </div>
          <div class="col">
            <a href="/" class="btn-grn"
              >New Registration</a
            >
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<%- include("bottom") -%>
